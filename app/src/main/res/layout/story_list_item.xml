<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent">

        <TextView
            android:id="@+id/story_headline"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            tool:text="News Title"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@id/story_headline">

            <TextView
                android:id="@+id/story_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                tool:text="08.07.2022"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/story_writer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/story_date"
                tool:text="Narendra Modi"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/story_section"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:layout_alignParentRight="true"
                tool:text="Story Section"
                android:padding="5dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:background="#FF0000"
                android:textSize="16sp" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>